_controlSpeed : _controlRule {

    base {
        type  : "rule"
        title : "Rule" // name
        frame : (x:0 y:0 w:320 h:222)
    }
    shader {

        falseColor : "falseColor.metal"  {
            type  : "colorize"
            shift : (0...1=0) <- elements.plane.value
        }
    }
    renderer {
            zero : (0...1=0) <- elements.fillZero.value
            one : (0...1=0) <- elements.fillOne.value
    }
    elements {

        speed  {
            type  : "slider"
            title : "Frames per second"
            frame : (x:70 y:164 w:192 h:44)
            icon  : "control.pearl.white.png"
            value : (1...60=60) <-> sky.main.fps
        }
    }
}
